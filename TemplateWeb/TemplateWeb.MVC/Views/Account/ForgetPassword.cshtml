@model TemplateWeb.MVC.Models.LoginModel
@using System.Collections.Generic;
@using BotDetect.Web.Mvc;

@{
    ViewBag.Title = "Forget Password";
}
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@using (Html.BeginForm("ForgetPassword", "Account", FormMethod.Post, new { id = "FormForgetPassword", autocomplete = "off" }))
{
    <fieldset>
        @Html.AntiForgeryToken()
        
        <div class="login-logo">
            <a href=""><b>Forget Password</b></a>
        </div>

        @if (@ViewBag.Message != null)
        {
            <div style="border: 1px solid red">
                @ViewBag.Message
            </div>
        }
        <h5 class="center"></h5>
        <div class="form-group has-feedback">
            @Html.TextBoxFor(a => a.txtUserName, new { @class = "form-control", @autocomplete = "off", placeholder = "Username", onfocus = "true", tabindex = "1" })
            <span class="glyphicon glyphicon-user form-control-feedback"></span>
        </div>
        @Html.ValidationMessageFor(a => a.txtUserName, "", new { @class = "text-danger" })
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="row">
            <div class="col-xs-6">
                <button id="btn-login" type="submit" class="btn btn-primary btn-block btn-flat">Reset</button>
            </div>
            <div class="col-xs-6 text-right">
                <a href="@Url.Action("Login","Account")"><i class="fa fa-arrow-left" style="font-size:12px;"></i> Back to login?</a>
            </div>
        </div>

    </fieldset>
}



@section scripts{

    <script src="~/Scripts/customs/globalScript.js"></script>
}



@model TemplateWeb.Common.ViewModels.mUserChangePasswordVW

@{
    ViewBag.Title = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { id = "frmAccount" }))
{
    @Html.AntiForgeryToken()

    <section class="content-header">
        <h1>
            @ViewBag.Title
        </h1>
    </section>

    <section class="content">
        <div class="row">
            <div class="box box-default">
                <div class="box-header with-border text-right">
                    <button type="submit" name="btn" value="SAVE" class="btn btn-success"><i class="fa fa-floppy-o"></i> Save</button>
                </div>
                <form role="form">
                    <div class="box-body">
                        @Html.HiddenFor(model => model.intUserID)

                        <div class="form-group">
                            <label id="lblPassword" class="col-sm-2 control-label">Password Lama <i style="color:red;">*</i></label>
                            <div class="col-md-10" style="padding-bottom:10px">
                                @Html.PasswordFor(model => model.txtPassword, new { @class = "form-control", @autocomplete = "off" })
                                @Html.ValidationMessageFor(model => model.txtPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label id="lblPassword" class="col-sm-2 control-label">Password Baru <i style="color:red;">*</i></label>
                            <div class="col-md-10" style="padding-bottom:10px">
                                @Html.PasswordFor(model => model.txtNewPassword, new { @class = "form-control", @autocomplete = "off" })
                                @Html.ValidationMessageFor(model => model.txtNewPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <label id="lblPassword" class="col-sm-2 control-label">Retype Password Baru <i style="color:red;">*</i></label>
                            <div class="col-md-10" style="padding-bottom:10px">
                                @Html.PasswordFor(model => model.txtRetypeNewPassword, new { @class = "form-control", @autocomplete = "off" })
                                @Html.ValidationMessageFor(model => model.txtRetypeNewPassword, "", new { @class = "text-danger" })
                            </div>
                        </div>
                    </div>

                    <div class="box-footer">

                    </div>
                </form>
            </div>
        </div>
    </section>


    @section scripts
    {
        <script src="~/Scripts/customs/globalScript.js"></script>

        <script type="text/javascript">
            $(document).ready(function () {

            });
        </script>
    }
}











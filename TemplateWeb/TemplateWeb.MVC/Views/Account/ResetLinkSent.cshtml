@model TemplateWeb.MVC.Models.LoginModel
@using System.Collections.Generic;
@using BotDetect.Web.Mvc;

@{
    ViewBag.Title = "Reset Link";
}
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

@using (Html.BeginForm("ResetLinkSent", "Account", FormMethod.Post, new { id = "FormResetLinkSent", autocomplete = "off" }))
{
    <fieldset>
        @Html.AntiForgeryToken()

        <div class="login-logo">

            <a href=""><b>Forget Password</b></a>
        </div>

        <div class="form-group has-feedback">
            @if (@ViewBag.Message != null)
            {
                <i class="fa fa-check text-green" style="font-size:12px;"></i> @ViewBag.Message
            }

            @if (@ViewBag.Error != null)
            {
                <i class="fa fa-times text-red" style="font-size:12px;"></i> @ViewBag.Error
            }
             
        </div>

        <div class="row">
            <div class="col-xs-12 text-right">
                <a href="@Url.Action("Login","Account")"><i class="fa fa-arrow-left" style="font-size:12px;"></i> Back to login?</a>
            </div>
        </div>

    </fieldset>
}



@section scripts{

    <script src="~/Scripts/customs/globalScript.js"></script>
    <script src="~/Scripts/customs/admins/loginScript.js"></script>
}



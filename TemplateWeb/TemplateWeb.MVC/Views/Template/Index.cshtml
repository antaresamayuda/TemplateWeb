@using TemplateWeb.Common
@using TemplateWeb.Common.Entity
@using TemplateWeb.MVC 

@{
    ViewBag.Title = "Master Template";
    Layout = "~/Views/Shared/_Layout.cshtml";
    }
  
@using (Html.BeginForm("Index", "Menu", FormMethod.Post, new { id = "frm1"}))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("txtHiddenObject")
    
     <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            @ViewBag.Title
            <small> @ViewBag.Title </small>
        </h1> 
    </section>
    
    <section class="content">
        <div class="row">
            <!-- left column -->
            @*<div class="col-md-6">*@
                <!-- general form elements -->
                <div class="box box-default"> 
                    <div class="box-header with-border text-right">                        
                        <a id="btnSave" class="btn btn-success"><i class="fa fa-floppy-o"></i> Save</a>
                        <a id="btnNew" class="btn btn-warning"><i class="fa fa-refresh"></i> New</a>
                        <a id="btnDelete" class="btn btn-danger" style="display:none;"><i class="fa fa-trash"></i> Delete </a>
                        @*<a id="btnDownload" class="btn btn-download" style="display:block;"><i class="fa fa-download"></i> Download </a>*@
                    </div>
                    <!-- /.box-header -->
                    <!-- form start -->
                    <form role="form">
                        <div class="box-body"> 
                            <div class="form-group">
                                <label id="lblID" class="col-sm-2 control-label">ID</label> 
                                <div class="col-sm-10">
                                    <div class="input-group">
                                        <div class="input-group-btn">
                                            <button type="button" class="btn btn-danger" id="btnLOVID"> <i class="fa fa-search"></i></button>
                                        </div> 
                                        <input type="text" class="form-control" id="txtID" disabled>
                                    </div>
                                </div>
                            </div> 
                            <div class="form-group">
                                <label id="lblName" class="col-sm-2 control-label">Type</label>
                                <div class="col-sm-10"> 
                                    <input type="text" class="form-control" id="txtType"> 
                                </div>
                            </div>
                            <div class="form-group">
                                <label id="lblDescription" class="col-sm-2 control-label">Description</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="txtDescription">
                                </div>
                            </div> 
                        </div>
                        <!-- /.box-body -->

                        <div class="box-footer">
                            
                        </div>
                    </form>
                </div>

                <div class="box box-default">
                    <a id="btnAddRow" class="btn btn-warning"><i class="fa fa-refresh"></i> Add Row</a>
                    <table id="dtDetail" style="width:auto;" class="table table-condensed table-striped table-hover">
                        <thead>
                            <tr>
                                <td><div id="lblDetailNo">No</div></td>
                                <td><div id="lblDetailCode">Code</div></td>
                                <td><div id="lblDetailDesc">Description</div></td>
                                <td><div id="lblDetailActive">Active</div></td>
                                <td><div id="lblDetailDelete">Delete</div></td>
                            </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
                <!-- /.box --> 

            </div>
            <!--/.col (left) -->
            
        @*</div>*@
        <!-- /.row -->
    </section>
      
    @section scripts
    {  
        <script src="~/Scripts/customs/globalScript.js"></script>
        <script src="~/Scripts/customs/admins/template/templatescript.js"></script>
 
    }     
}
 
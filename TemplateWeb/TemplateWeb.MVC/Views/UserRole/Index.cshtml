@using TemplateWeb.Common
@using TemplateWeb.Common.Entity
@using TemplateWeb.MVC

@{
    ViewBag.Title = "Setting User Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm("Index", "UserRole", FormMethod.Post, new { id = "frmUserRole" }))
{
    @Html.AntiForgeryToken()
    @Html.Hidden("txtHiddenObject")

    <section class="content-header">
        <h1>
            @ViewBag.Title
        </h1>
    </section>

    <section class="content">
        <div class="row">
            <!-- left column -->
            @*<div class="col-md-6">*@
            <!-- general form elements -->
            <div class="box box-default">
                <div class="box-header with-border text-right">
                    <button type="button" class="btn btn-danger" id="btnLOVID"> <i class="fa fa-search"></i> View</button>
                    <a id="btnSave" class="btn btn-success"><i class="fa fa-floppy-o"></i> Save</a>
                    <a id="btnNew" class="btn btn-warning"><i class="fa fa-refresh"></i> New</a>
                    <a id="btnDelete" class="btn btn-danger" style="display:none;"><i class="fa fa-trash"></i> Delete </a>
                </div>
                <!-- /.box-header -->
                <!-- form start -->
                <form role="form">
                    <div class="box-body">
                        <div class="form-group">
                            <label id="lblUserRoleID" class="col-sm-2 control-label">User Role ID</label>
                            <div class="col-sm-10" style="padding-bottom:10px">
                                <input type="text" class="form-control" id="txtID" disabled>
                            </div>
                        </div>
                        <div class="form-group">
                            <label id="lblName" class="col-sm-2 control-label">User</label>
                            <div class="col-sm-10" style="padding-bottom:10px">
                                <div class="input-group">
                                    <div class="input-group-btn">
                                        <button type="button" class="btn btn-danger" id="btnLOVUser"> <i class="fa fa-search"></i></button>
                                    </div>
                                    <div class="input-group-btn" style="width:100px;">
                                        <input type="text" class="form-control" id="txtUserID" disabled>
                                    </div>
                                    <input type="text" class="form-control" id="txtUserName" disabled>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label id="lblDescription" class="col-sm-2 control-label">Role</label>
                            <div class="col-sm-10" style="padding-bottom:10px">
                                <div class="input-group">
                                    <div class="input-group-btn">
                                        <button type="button" class="btn btn-danger" id="btnLOVRole"> <i class="fa fa-search"></i></button>
                                    </div>
                                    <div class="input-group-btn" style="width:100px;">
                                        <input type="text" class="form-control" id="txtRoleID" disabled>
                                    </div>
                                    <input type="text" class="form-control" id="txtRoleName" disabled>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->

                    <div class="box-footer">

                    </div>
                </form>
            </div>
            <!-- /.box -->

        </div>
        <!--/.col (left) -->
        @*</div>*@
        <!-- /.row -->
    </section>


    @section scripts
    {
        <script src="~/Scripts/customs/globalScript.js"></script>
        <script src="~/Scripts/customs/admins/userrole/userrolescript.js"></script>
    }
}
